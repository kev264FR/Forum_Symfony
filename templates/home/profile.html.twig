{% extends "base.html.twig" %}
{% block title %} Profile de {{app.user.username}} {% endblock %}
{% block body %}
    <h1>Profile de {{app.user.username}}</h1>

    <ul>
        {% for role in app.user.roles %}
            <li> {{role}} </li>
        {% endfor %}
    </ul>
    <a class="btn btn-info btn-lg" href="{{path("change_password")}}">Changer le mot de passe</a>
{% endblock %}